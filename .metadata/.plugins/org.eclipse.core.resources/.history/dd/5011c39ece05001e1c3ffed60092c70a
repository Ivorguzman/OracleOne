
public class TipoVariableDecimal {
	public static void main(String[] args) {

		double salario = 1250;
		double salario2 = 1250.50;
		double salario3 = 1250.55;

		double mitad_salario = salario / 2;

		System.out.println("Salario = " + salario);
		System.out.println("Salario 2 = " + salario2);
		System.out.println("Salario 3 = " + salario3);
		System.out.println("Mitad salario (salario/2) = " + mitad_salario);


	}

}
